{
	"version": "0.2.0",
	"configurations": [
    {
            "name": "Launch index.html",
            "type": "chrome",
            "request": "launch",
            "file": "www/index.html"
        },
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/index.html",
            "webRoot": "./www",
            "sourceMaps": true
        },
		{
			"name": "Run Android on device",
			"type": "cordova",
			"request": "launch",
			"platform": "android",
			"target": "device",
			"port": 8700,
			"sourceMaps": true
		},
		{
			"name": "Run iOS on device",
			"type": "cordova",
			"request": "launch",
			"platform": "ios",
			"target": "device",
			"port": 9220,
			"sourceMaps": true
		},
		{
			"name": "Attach to running android on device",
			"type": "cordova",
			"request": "attach",
			"platform": "android",
			"target": "device",
			"port": 8700,
			"sourceMaps": true
		},
		{
			"name": "Attach to running iOS on device",
			"type": "cordova",
			"request": "attach",
			"platform": "ios",
			"target": "device",
			"port": 9220,
			"sourceMaps": true
		},
		{
			"name": "Run Android on emulator",
			"type": "cordova",
			"request": "launch",
			"platform": "android",
			"target": "emulator",
			"port": 9222,
			"sourceMaps": true
		},
		{
			"name": "Run iOS on simulator",
			"type": "cordova",
			"request": "launch",
			"platform": "ios",
			"target": "emulator",
			"port": 9220,
			"sourceMaps": true
		},
		{
			"name": "Attach to running android on emulator",
			"type": "cordova",
			"request": "attach",
			"platform": "android",
			"target": "emulator",
			"port": 9222,
			"sourceMaps": true
		},
		{
			"name": "Attach to running iOS on simulator",
			"type": "cordova",
			"request": "attach",
			"platform": "ios",
			"target": "emulator",
			"port": 9220,
			"sourceMaps": true
		}
	]
}